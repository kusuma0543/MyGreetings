<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_admin1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="180dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.k3ench.mygreetings.Admin1"
    tools:showIn="@layout/activity_admin1"
    android:background="@drawable/wa"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:paddingTop="20dp"
            android:layout_width="90dp"
            android:layout_height="132dp"
            android:background="@drawable/ten"
            android:layout_marginStart="25dp"
            android:id="@+id/imageButton"
            android:layout_alignParentStart="true"
            android:paddingRight="30dp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="154dp"
            app:srcCompat="@drawable/ele"
            android:paddingLeft="90dp"
            android:id="@+id/imageView2"
            android:layout_weight="1.71" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tc"
            android:text="   Name"
           android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:paddingRight="8dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tc1"
            android:paddingLeft="5dp"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="    Partner Name"
                       android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed"

            android:background="@drawable/fils"
            android:layout_weight="1"
            android:paddingRight="8dp"
            android:layout_marginRight="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed1"
            android:paddingLeft="5dp"
            android:layout_marginLeft="8dp"

            android:background="@drawable/fils"

            android:layout_weight="1"/>

    </LinearLayout>


    <ImageButton
        android:layout_width="161dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:id="@+id/bn"
        android:text="DELETE"
        android:clickable="true"
        android:layout_gravity="bottom|center"
        android:background="@drawable/stock"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

</LinearLayout>
